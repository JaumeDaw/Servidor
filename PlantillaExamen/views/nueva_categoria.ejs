<%- include('cabecera'); %>

<h1>Formulario de alta de Categoría</h1>

<form action="" method="post">
  <div class="form-group">
    <label for="nombre">Código:</label>
    <input type="text" class="form-control" id="codigo" name="codigo" />
  </div>

  <div class="form-group">
    <label for="descripcion">Descripción:</label>
    <input
      type="text"
      class="form-control"
      id="descripcion"
      name="descripcion"
    />
  </div>

  <div class="form-group">
    <label for="min">Edad minima:</label>
    <input type="number" class="form-control" name="min" id="min" />
  </div>

  <div class="form-group">
    <label for="max">Edad maxima:</label>
    <input type="number" class="form-control" name="max" id="max" />
  </div>

  <hr />
  <button class="btn btn-secondary" onclick="nuevaCategoria()">Enviar</button>

</form>

<%- include('pie'); %>
